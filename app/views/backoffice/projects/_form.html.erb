<%= form_for [:backoffice, @project] do |f| %>
  <%= render  "layouts/backoffice_shared/errors_message", resource: @project %>

  <div class="form-row">
    <div class="form-group col-md-2">
      <%= f.label :ordem %>
      <%= f.number_field :order, class:"form-control" %>
    </div>

    <div class="form-group col-md-10">
      <%= f.label :name %>
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-2">
      <%= f.label :cover %>
      <%= f.file_field :cover, direct_upload: true %>
    </div>

    <div class="form-group col-md-2">
      <%= image_tag link_to_preview_project_cover(@project), id:'image' %>
    </div>
  </div>

  <div class="custom-control custom-switch">
    <div class="form-group">
      <%= f.check_box :active, class: "custom-control-input" %>
      <%= f.label :active, class: "custom-control-label" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.label :template %>
      <%= f.cktext_area :template, ckeditor: { language: 'pt-BR' } %>
    </div>
  </div>

  <div class="text-right">
    <%= link_to  "Voltar", backoffice_projects_path, class: "btn btn-dark" %>
    <%= f.submit 'Salvar', class: "btn btn-primary" %>
  </div>
<% end %>
<br>
