<div class="container">
  <%= render "header", add_path: new_backoffice_user_path %>

  <div class="table-responsive-md">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>E-mail</th>
          <th>Ativo</th>
          <th class="text-center">Administrador</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <th><%= index + 1 %></th>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= boolean_label(user.active?) %></td>
            <td class="text-center"><%= boolean_label(user.admin?) %></td>

            <td class="table-actions">
              <%= link_to edit_backoffice_user_path(user), class: 'icon-link' do %>
                <%= fa_icon "edit" %>
              <% end %>

              <%= link_to backoffice_user_path(user), class: 'icon-link remove-icon-link', method: :delete, data: { confirm: 'VocÃª tem certeza?'} do %>
                <%= fa_icon "trash" %>
              <% end if current_user.admin? && user != current_user %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

